<Window x:Class="groupProject.Items.Items_Internal_Windows.UpdateItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:groupProject.Items.Items_Internal_Windows"
        mc:Ignorable="d"
        Title="UpdateItemWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="CostTextBox" HorizontalAlignment="Left" Margin="400,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="24"/>
        <Label x:Name="CostLabel" Content="Cost:" HorizontalAlignment="Left" Margin="290,131,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Margin="400,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="24"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="218,213,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="UpdateButton" Content="Submit" HorizontalAlignment="Left" Margin="182,350,0,0" VerticalAlignment="Top" FontSize="30" Width="104" Click="SubmitButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="460,350,0,0" VerticalAlignment="Top" FontSize="30" Click="CancelButton_Click"/>
        <Label Content="Update Item" HorizontalAlignment="Left" Margin="280,41,0,0" VerticalAlignment="Top" FontSize="35" FontWeight="Bold"/>

    </Grid>
</Window>
