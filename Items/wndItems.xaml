<Window x:Class="groupProject.Items.wndItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:groupProject.Items"
        mc:Ignorable="d"
        Title="wndItems" Height="494" Width="800" WindowStartupLocation="CenterScreen">

    <Grid>

        <DataGrid x:Name="ItemWindowDataGrid" AutoGenerateColumns="False" Margin="10,64,10,105">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Description" Binding="{Binding description}" Width="*"/>
                <DataGridTextColumn Header="Code" Binding="{Binding code}" Width="100"/>
                <DataGridTextColumn Header="Cost" Binding="{Binding cost}" Width="100"/>

                <!-- Action Buttons Column -->
                <DataGridTemplateColumn Header="Actions" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Edit" Click="EditButton_Click" Tag="{Binding}" Margin="5"/>
                                <Button Content="Delete" Click="DeleteButton_Click" Tag="{Binding}" Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
        <Canvas Margin="0,378,0,0">
            <Button x:Name="ReturnButton" Content="Return" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Click="ReturnButton_Click" Canvas.Left="354" Canvas.Top="16"/>
        </Canvas>
        <Canvas Margin="0,0,0,375">
            <Button x:Name="AddItemButton" Content="Add Item" Canvas.Left="12" Canvas.Top="20" HorizontalAlignment="Left" VerticalAlignment="Center" Width="124" FontSize="20" Click="AddItemButton_Click"/>
        </Canvas>
    </Grid>

</Window>
