<Window x:Class="groupProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:groupProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>
            <GroupBox x:Name="disGroup" Canvas.Left="50" Canvas.Top="100" Width="250" Height="100">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <Label Content="Invoice Date: " Grid.Row="0" Grid.Column="0"/>
                    <Label Content="Invoice Number: " Grid.Row="1" Grid.Column="0"/>
                    <Label Content="Total Cost: " Grid.Row="2" Grid.Column="0"/>

                    <Label x:Name="disDate" Grid.Column="1" Grid.Row="0"/>
                    <Label x:Name="disNum" Grid.Column="1" Grid.Row="1"/>
                    <Label x:Name="discost" Grid.Column="1" Grid.Row="2"/>
                </Grid>
            </GroupBox>
            <GroupBox x:Name="itemGroup" Canvas.Left="50" Canvas.Top="250">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Label Content="Items: " Grid.Row="0" Grid.Column="0"/>
                    <Label Content="Cost: " Grid.Row="1" Grid.Column="0"/>

                    <ComboBox x:Name="itemBox" Grid.Row="0" Grid.Column="1" Margin="5, 5" IsEnabled="False"/>
                    <Label x:Name="itemCostLbl" Grid.Row="1" Grid.Column="1"/>

                    <Button x:Name="addItemBtn" Content="Add Item" Grid.Row="0" Grid.Column="2" Margin="5, 5" Click="addItemBtn_Click" IsEnabled="False"/>
                    <Button x:Name="removeItemBtn" Content="Remove Item" Grid.Row="1" Grid.Column="2" Margin="5, 5" IsEnabled="False" Click="removeItemBtn_Click"/>
                </Grid>
            </GroupBox>

            <Button x:Name="searchBtn" Content="Search" Canvas.Left="0" Canvas.Top="0" Width="50" Click="searchBtn_Click"/>
            <Button x:Name="itemBtn" Content="Edit Items" Canvas.Left="50" Canvas.Top="0" Width="70" Click="itemBtn_Click"/>
            <Button x:Name="newBtn" Content="New Invoice" Canvas.Left="120" Canvas.Top="0" Click="newBtn_Click"/>
            <Button x:Name="editBtn" Content="Edit Invoice" Canvas.Left="350" Canvas.Top="40" Click="editBtn_Click"/>
            <Button x:Name="saveBtn" Content="Save Invoice" Canvas.Left="450" Canvas.Top="40" Click="saveBtn_Click"/>
            <Label Content="Items on Invoice" Canvas.Left="350" Canvas.Top="125"/>


            <DataGrid x:Name="itemDataGrid" Canvas.Left="350" Canvas.Top="150" Width="400" Height="200" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Item Code" Binding="{Binding code}" Width="70"/>
                    <DataGridTextColumn Header="Cost" Binding="{Binding cost}" Width="95"/>
                    <DataGridTextColumn Header="Item Description" Binding="{Binding description}" Width="235"/>
                    
                </DataGrid.Columns>
            </DataGrid>
        </Canvas>
    </Grid>
</Window>