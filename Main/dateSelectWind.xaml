<Window x:Class="groupProject.Main.dateSelectWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:groupProject.Main"
        mc:Ignorable="d"
        Title="dateSelectWind" Height="250" Width="300">
    <Grid>
        <Canvas>
            <Label Content="Select Date: " Canvas.Left="50" Canvas.Top="50"/>
            <DatePicker x:Name="datePicker" Canvas.Left="150" Canvas.Top="50"/>
            <Button x:Name="okBtn" Content="OK" Canvas.Left="90" Canvas.Top="100" Click="okBtn_Click" Width="75"/>
        </Canvas>
    </Grid>
</Window>
